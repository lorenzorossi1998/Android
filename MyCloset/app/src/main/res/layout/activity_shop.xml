<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/cloth"
    tools:context=".ShopActivity">

    <TextView
        android:id="@+id/marcaTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/modelloTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/marcaTW"
        app:layout_constraintTop_toBottomOf="@+id/marcaTW" />

    <TextView
        android:id="@+id/categoriaTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/modelloTW"
        app:layout_constraintTop_toBottomOf="@+id/modelloTW" />

    <TextView
        android:id="@+id/votoTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/categoriaTW"
        app:layout_constraintTop_toBottomOf="@+id/categoriaTW" />

    <TextView
        android:id="@+id/descrizioneTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/votoTW"
        app:layout_constraintTop_toBottomOf="@+id/votoTW" />

    <ImageView
        android:id="@+id/urlIW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/cloth"
        app:layout_constraintStart_toStartOf="@+id/descrizioneTW"
        app:layout_constraintTop_toBottomOf="@+id/descrizioneTW"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/linkBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/shop"
        app:layout_constraintBottom_toBottomOf="@+id/categoriaTW"
        app:layout_constraintStart_toEndOf="@+id/categoriaTW"
        app:layout_constraintTop_toTopOf="@+id/categoriaTW" />

</androidx.constraintlayout.widget.ConstraintLayout>